<body>
    <div class="center-content">
        <%= image_tag 'imarin.jpg' , class: "resized-image"%>
        <div class="balloon"><%= @question %></div>
        <%= form_with url: "/submit", method: :post do %>
        <div>
            <%= text_area_tag :textbox, nil, class: "large-textbox" , placeholder: "回答を入力してください"%><br>
            <%= hidden_field_tag :source_view, @source_view %>
            <%= submit_tag "次の質問へ" %>
        </div>
        <% end %>
    </div>
</body>
